<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/splashbg"
    app:cardBackgroundColor="@android:color/transparent">

    <androidx.cardview.widget.CardView
        android:id="@+id/leavehistory"
        android:layout_width="match_parent"
        android:layout_height="149dp"
        android:layout_gravity="center"
        android:background="@drawable/rounded"
        android:visibility="visible"
        app:cardBackgroundColor="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/requestlayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginTop="30dp">

                <ImageButton
                    android:id="@+id/reportgen"
                    android:layout_width="40dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="90dp"
                    android:layout_marginBottom="304dp"
                    android:background="@drawable/btnbg"
                    android:src="@drawable/report"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.251"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                <ImageButton
                    android:id="@+id/add_days"
                    android:layout_width="40dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginBottom="304dp"
                    android:background="@drawable/btnbg"
                    android:src="@drawable/adddays"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.647"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
                <ImageButton
                    android:id="@+id/att_rep"
                    android:layout_width="40dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginBottom="304dp"
                    android:background="@drawable/btnbg"
                    android:src="@drawable/attendanceicon"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.647"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>